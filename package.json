{
    "name": "client",
    "version": "0.0.0",
    "license": "MIT",
    "scripts": {
        "start": "concurrently --names \"ng,serverless\" \"yarn run start:ng\" \"yarn run start:serverless\"",
        "start:ng": "ng serve --hmr -e=hmr --host 0.0.0.0 --disableHostCheck",
        "start:serverless": "cd serverless && yarn start",
        "build": "rimraf dist && mkdir dist && ng build --aot --prod",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "ng": "ng",
        "postinstall": "cd serverless && yarn",
        "postmerge": "yarn",
        "postcheckout": "yarn",
        "deploy:client": "yarn build && aws s3 sync dist s3://serverless-intro --delete",
        "deploy:lambda": "cd serverless && yarn run deploy:lambda"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^5.1.1",
        "@angular/common": "^5.1.1",
        "@angular/compiler": "^5.1.1",
        "@angular/core": "^5.1.1",
        "@angular/forms": "^5.1.1",
        "@angular/http": "^5.1.1",
        "@angular/platform-browser": "^5.1.1",
        "@angular/platform-browser-dynamic": "^5.1.1",
        "@angular/router": "^5.1.1",
        "core-js": "^2.4.1",
        "rxjs": "^5.5.2",
        "uuid": "^3.2.1",
        "zone.js": "^0.8.14"
    },
    "devDependencies": {
        "@angular/cli": "1.7.3",
        "@angular/compiler-cli": "^5.1.1",
        "@angular/language-service": "^5.1.1",
        "@angularclass/hmr": "^2.1.3",
        "@types/jasmine": "~2.5.53",
        "@types/jasminewd2": "~2.0.2",
        "@types/node": "~6.0.60",
        "codelyzer": "~4.0.1",
        "concurrently": "^3.5.1",
        "husky": "^0.14.3",
        "jasmine-core": "~2.6.2",
        "jasmine-spec-reporter": "~4.1.0",
        "jsonschema": "^1.2.2",
        "karma": "~1.7.0",
        "karma-chrome-launcher": "~2.1.1",
        "karma-cli": "~1.0.1",
        "karma-coverage-istanbul-reporter": "^1.2.1",
        "karma-jasmine": "~1.1.0",
        "karma-jasmine-html-reporter": "^0.2.2",
        "protractor": "~5.1.2",
        "rimraf": "^2.6.2",
        "ts-node": "~3.2.0",
        "tslint": "~5.3.2",
        "typescript": "~2.4.2"
    }
}
